<% provide(:title, 'Confirm Address') %>
<% provide(:button_text, 'Ship to this address') %>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <h3>Shipping Address</h3>
    
    <% if current_user.full_address %>
      
      <p>
        Is the address you'd like to use displayed below? <br>
        If so, click the corresponding "Ship to this address" button.<br>
        Or you can enter a new <%= link_to "shipping address here.", address_user_path(current_user) %> 
      </p>
      <p>
        <b>Address: </b><br>

        <%= @user.address1 %>
        <%= @user.address2 %><br>

        <%= @user.city %>

        <%= @user.state %>

        <%= @user.zip_code %><br>
      </p> 
      <p>
        <b>Phone: </b>
        <%= @user.phone %>
      </p>

      <%= button_to "Ship to this address", new_order_url, :method => "get", :class => "btn btn-warning" %>
      
    <% else %>
      <p class="center">
        Please Update Your Address Before Proceeding.
        <%= button_to "Update Shipping Address", address_user_path(current_user), :method => "get", :class => "btn btn-warning" %>                                   
      </p>
    <% end %>                       
  </div>
</div>